{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "cd ../ui && npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../ui/dist"
  },
  "package": {
    "productName": "AuraNexus",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.auranexus.app",
      "icon": [
        "icons/icon.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "AuraNexus",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
